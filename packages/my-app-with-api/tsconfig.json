{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "module": "commonjs",
    "noImplicitAny": true,
    "lib": ["es2017", "es7", "es6", "dom"],
    "outDir": "./dist",
    "target": "es5",
    "moduleResolution": "node",
    "baseUrl": "./src/api"
  },
  "typedocOption": {
    "mode": "modules",
    "out": "docs"
  },
  "include": [
    "src/api/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}